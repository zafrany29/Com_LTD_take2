@page
@model Welp.Pages.LoginModel
@{
    ViewData["Title"] = "Log-in";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <form class="login-form" method="post">
        <div class="form-group">
            <input asp-for="LoginViewModel.Username" class="form-control shadow" placeholder="User Name" />
            <span asp-validation-for="LoginViewModel.Username" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input asp-for="LoginViewModel.Password" type="password" class="form-control shadow" placeholder="Password" />
            <span asp-validation-for="LoginViewModel.Password" class="text-danger"></span>
        </div>
        <div class="form-group">
            @if (ViewData.ModelState[""] != null && ViewData.ModelState[""].Errors.Any())
            {
                <span class="text-danger">@ViewData.ModelState[""].Errors.First().ErrorMessage</span>
            }
        </div>
        <div class="form-group">
            <a href="/Forgot_password" class="forgot-password-link">Forgot Password?</a>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary btn-block">Log-In</button>
        </div>
        <div class="form-group">
            <a href="/RegisterForm" class="btn btn-secondary btn-block">Register</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    .login-form {
        max-width: 300px;
        margin: auto;
    }

    .form-group {
        margin: 15px 0;
    }

    .shadow {
        box-shadow: 2px 2px 5px #aaaaaa;
    }

    .btn {
        margin: 5px 0;
    }

    .forgot-password {
        display: block;
        margin-top: 10px;
        color: #007bff;
        text-decoration: none;
    }
</style>