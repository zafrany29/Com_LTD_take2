@page
@model Welp.Pages.AddClientModel
@{
    ViewData["Title"] = "Add Client";
}

<h2>Add New Client</h2>

<form method="post">
    <div class="form-group">
        <label for="CompanyName">Company Name:</label>
        <input type="text" id="CompanyName" name="CompanyName" class="form-control" asp-for="CompanyInfo.CompanyName" />
    </div>
    <div class="form-group">
        <label for="Country">Country:</label>
        <input type="text" id="Country" name="Country" class="form-control" asp-for="CompanyInfo.Country" />
    </div>
    <div class="form-group">
        <label for="Size">Size:</label>
        <input type="text" id="Size" name="Size" class="form-control" asp-for="CompanyInfo.Size" />
    </div>
    <div class="form-group">
        <label for="Days">Days:</label>
        <input type="text" id="Days" name="Days" class="form-control" asp-for="CompanyInfo.Days" />
    </div>
    <div class="form-group">
        <label for="Price">Price:</label>
        <input type="text" id="Price" name="Price" class="form-control" asp-for="CompanyInfo.Price" />
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>