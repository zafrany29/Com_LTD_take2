@page
@model madeit
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <form class="login-form">
        <div class="form-group">
            <input type="text" class="form-control shadow" placeholder="You made it" />
        </div>
        <div class="form-group">
            <input type="password" class="form-control shadow" placeholder="Password" />
        </div>
        <div class="form-group">
            <a href="/Forgot_password" class="forgot-password-link">Forgot Password?</a>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary btn-block">Log-In</button>
        </div>
        <div class="form-group">
            <a href="/Register" class="btn btn-secondary btn-block">Register</a>
        </div>
    </form>
</div>

<style>
    .login-form {
        max-width: 300px;
        margin: auto;
    }
    .form-group {
        margin: 15px 0;
    }
    .shadow {
        box-shadow: 2px 2px 5px #aaaaaa;
    }
    .btn {
        margin: 5px 0;
    }
    .forgot-password {
        display: block;
        margin-top: 10px;
        color: #007bff;
        text-decoration: none;
    }
</style>
